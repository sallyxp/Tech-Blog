<div class="row">
  <div class="col-md-6 p-3">
    <h2 style="background-color: #6699cc; border-radius: 0.2rem; padding: 10px">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email: </label><br>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group mb-3">
        <label for="password-login">Password: </label><br>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <a href="/signup"> Don't have an account? Sign up here!</a>
      <div class="form-group mb-3">
        <button class="btn btn-primary login-btn" type="submit">Login</button>
      </div>
    </form>
  </div>
</div>

<!-- javascript file-->
<script src="/javascript/login.js"></script>